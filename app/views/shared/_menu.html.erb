    <% else %>

    <% # Otherwise, only show a button to log in %>
      <%= link_to new_user_session_path, :class => "btn btn-default navbar-btn" do %>
        Login&nbsp;&nbsp;<span class="glyphicon glyphicon-log-in"></span>
      <% end %>
