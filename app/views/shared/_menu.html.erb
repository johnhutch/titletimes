<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <a class="navbar-brand pull-left" href="<%= root_path %>">Title Times</a>
    <div class="navbar-right pull-right">

    <% if user_signed_in? %>
    <% # If user is signed in, show a button to add a Titletime and a button to log out %>
      <%= link_to new_titletime_path, :class => "btn btn-default navbar-btn" do %>
        Add&nbsp;&nbsp;<span class="glyphicon glyphicon-plus"></span>
      <% end %
